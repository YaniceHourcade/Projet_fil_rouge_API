datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  favoris  Artist[] @relation("UserFavoris")
  role     String   @default("user")
}

model Artist {
  id       Int       @id @default(autoincrement())
  name     String
  genre    String
  age      Int
  country  String
  url      String
  albums   Album[]
  concerts Concert[]
  fans     User[]    @relation("UserFavoris")
}

model Album {
  id       Int    @id @default(autoincrement())
  title    String
  year     Int
  song     Int
  artist   Artist @relation(fields: [artistId], references: [id])
  artistId Int
}

model Concert {
  id       Int      @id @default(autoincrement())
  location String
  date     DateTime
  place    Int
  artist   Artist   @relation(fields: [artistId], references: [id])
  artistId Int
}
